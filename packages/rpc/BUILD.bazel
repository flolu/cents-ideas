load("@npm_bazel_typescript//:index.bzl", "ts_library")

package(default_visibility = ["//services:__subpackages__"])

filegroup(
    name = "proto_files",
    srcs = glob(["**/*.proto"]),
)

ts_library(
    name = "rpc",
    srcs = glob(["**/*.ts"]),
    module_name = "@centsideas/rpc",
    deps = [
        "//packages/event-sourcing",
        "//packages/models",
        "//packages/utils",
        "@npm//@grpc/grpc-js",
        "@npm//@grpc/proto-loader",
        "@npm//@types/node",
        "@npm//inversify",
    ],
)
