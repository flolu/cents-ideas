load("@npm_bazel_typescript//:index.bzl", "ts_library")

package(default_visibility = ["//:__subpackages__"])

# TODO consider more fine-grained control
filegroup(
    name = "proto_files",
    srcs = glob(["**/*.proto"]),
)

ts_library(
    name = "schemas",
    srcs = glob(["**/*.ts"]),
    module_name = "@centsideas/schemas",
    deps = [
        "//packages/models",
        "@npm//@grpc/grpc-js",
        "@npm//@grpc/proto-loader",
        "@npm//@types/async-retry",
        "@npm//@types/node",
    ],
)
