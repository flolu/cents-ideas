{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["../../node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@ci-frontend/app": ["./src/app"],
      "@ci-frontend/ideas": ["./src/app/ideas"],
      "@ci-frontend/ideas/*": ["./src/app/ideas/*"],
      "@ci-frontend/reviews": ["./src/app/reviews"],
      "@ci-frontend/reviews/*": ["./src/app/reviews/*"],
      "@ci-frontend/users": ["./src/app/users"],
      "@ci-frontend/users/*": ["./src/app/users/*"],

      "@cents-ideas/enums": ["../../packages/enums"],
      "@cents-ideas/utils": ["../../packages/utils"],
      "@cents-ideas/event-sourcing": ["../../packages/event-sourcing"],
      "@cents-ideas/models": ["../../packages/models"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
