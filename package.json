{
  "name": "centsideas",
  "scripts": {
    "dev": "yarn env:setup && yarn docker",
    "client:dev": "yarn env:setup && ibazel run //services/client:dev_server",
    "admin:dev": "yarn env:setup && ibazel run //services/admin-client:live_server",
    "client": "yarn env:setup bazelisk run //services/client",
    "admin": "yarn env:setup && bazelisk run //services/admin-client",
    "test": "yarn env:setup && bazelisk test //...",
    "deploy": "yarn env:setup:prod && bazelisk run :k8s.apply",
    "deploy:microk8s": "yarn env:setup:staging && bazelisk run :microk8s.apply",
    "lint": "tslint --project .",
    "up": "yarn upgrade-interactive --latest",
    "docker": "docker-compose up --build --no-color",
    "clean": "rm -rf node_modules && bazelisk clean && env:clean",
    "env:clean": "ts-node packages/environment/clean",
    "env:setup": "ts-node packages/environment/setups/dev",
    "env:setup:staging": "ts-node packages/environment/setups/staging",
    "env:setup:prod": "ts-node packages/environment/setups/prod",
    "postinstall": "patch-package --patch-dir misc/patches && ngcc && yarn env:setup"
  },
  "scriptsComments": {
    "docker": "# FIXME disable logger prefixes https://github.com/docker/compose/issues/7416"
  },
