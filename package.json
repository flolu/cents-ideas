    "ngx-socket-io": "^3.2.0",
    "protobufjs": "^6.10.1",
    "query-string": "^6.13.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.0",
    "sanitize-html": "1.27.1",
    "shortid": "2.2.15",
    "socket.io": "^2.3.0",
    "ts-node": "8.10.2",
    "tslib": "2.0.0",
    "uuid": "8.2.0",
    "web-push": "^3.4.4",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1000.3",
    "@angular/cli": "10.0.3",
    "@angular/compiler-cli": "10.0.4",
