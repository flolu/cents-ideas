  "repository": {
    "type": "git",
    "url": "https://github.com/flolu/cents-ideas.git"
  },
  "scripts": {
    "dev": "yarn setup && yarn docker:dev",
    "test": "bazelisk test //...",
    "deploy": "bazelisk run :kubernetes_deployment.apply",
    "clean": "rm -rf node_modules && yarn bazel:clean && yarn docker:clean",
    "setup": "ts-node setup",
    "docker:dev": "docker-compose up --build --no-color 2>&1 | sed 's/^[^ ]*  *| //'",
    "docker:dev:verbose": "docker-compose up --build",
    "docker:stop": "docker container stop $(docker container ls -aq)",
    "docker:prune": "docker system prune --volumes",
    "docker:clean": "yarn docker:stop && yarn docker:prune",
    "bazel:clean": "bazelisk clean",
    "client:dev": "ibazel run //services/client/src:devserver --define configuration=dev",
    "client:prod": "bazelisk run //services/client/src:prodserver --define configuration=prod",
    "client:ssr": "bazelisk run //services/client/src:universal_server_dev_server --define configuration=prod",
    "client:ssr:dev": "bazelisk run //services/client/src:universal_server_dev_server --define configuration=dev",
    "postinstall": "ngcc",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "up": "yarn upgrade-interactive --latest"
  },
