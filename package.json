    "@ngrx/entity": "^9.2.0",
    "@ngrx/router-store": "^9.2.0",
    "@ngrx/store": "9.2.0",
    "@nguniversal/express-engine": "10.0.1",
    "@sendgrid/mail": "7.2.1",
    "async-retry": "1.3.1",
    "axios": "0.21.1",
    "body-parser": "1.19.0",
    "chalk": "4.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "2.8.5",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "faker": "4.1.0",
