    "typescript": "3.9.7"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write --parser=typescript"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "avoid"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@centsideas/(.*)$": "<rootDir>/packages/$1",
      "^@cic/(.*)$": "<rootDir>/services/client/$1"
    }
  },
  "_moduleAliases": {
    "@centsideas/config": "./packages/config",
    "@centsideas/dependency-injection": "./packages/dependency-injection",
    "@centsideas/enums": "./packages/enums",
    "@centsideas/event-sourcing": "./packages/event-sourcing",
    "@centsideas/models": "./packages/models",
    "@centsideas/rpc": "./packages/rpc",
    "@centsideas/schemas": "./packages/schemas",
    "@centsideas/testing": "./packages/testing",
    "@centsideas/types": "./packages/types",
    "@centsideas/utils": "./packages/utils"
  }
}
