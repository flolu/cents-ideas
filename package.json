{
  "name": "cents-ideas",
  "license": "MIT",
  "scripts": {
    "dev": "yarn setup && yarn docker:dev",
    "test": "bazel test //...",
    "deploy": "bazel run :kubernetes_deployment.apply",
    "setup": "ts-node setup",
    "docker:dev": "docker-compose up --build --no-color 2>&1 | sed 's/^[^ ]*  *| //'",
    "start:gateway": "ts-node-dev services/gateway/index.ts",
    "start:ideas": "ts-node-dev services/ideas/index.ts",
    "start:users": "ts-node-dev services/users/index.ts",
    "start:consumer": "ts-node-dev services/consumer/index.ts",
    "start:reviews": "ts-node-dev services/reviews/index.ts",
    "docker:stop": "docker container stop $(docker container ls -aq)",
    "docker:prune": "docker system prune --volumes",
    "docker:clean": "yarn docker:stop && yarn docker:prune",
    "bazel:clean": "bazel clean"
  },
  "dependencies": {
    "@types/uuid": "^3.4.6",
    "async-retry": "^1.2.3",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "kafkajs": "^1.10.0",
    "mongodb": "^3.3.2",
    "nodemailer": "^6.4.2",
    "reflect-metadata": "^0.1.13",
    "sanitize-html": "^1.20.1",
    "shortid": "^2.2.15",
    "ts-node": "^8.6.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@bazel/bazel": "^2.0.0",
    "@bazel/buildifier": "^0.29.0",
    "@bazel/typescript": "^1.1.0",
    "@types/async-retry": "^1.4.1",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.8",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/kafkajs": "^1.8.2",
    "@types/module-alias": "^2.0.0",
    "@types/mongodb": "^3.3.1",
    "@types/nodemailer": "^6.4.0",
    "@types/sanitize-html": "^1.20.1",
    "@types/shortid": "^0.0.29",
    "jest": "^24.9.0",
    "module-alias": "^2.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.6.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true
  },
  "_moduleAliases": {
    "@cents-ideas/enums": "./packages/enums",
    "@cents-ideas/utils": "./packages/utils",
    "@cents-ideas/event-sourcing": "./packages/event-sourcing",
    "@cents-ideas/models": "./packages/models"
  },
  "version": "0.0.0"
}
