{
  "name": "cents-ideas",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn install && yarn run build",
    "tsc": "tsc",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "start:docker": "docker-compose up --build",
    "start:docker:dev": "docker-compose -f docker-compose.dev.yaml up --build",
    "start": "yarn start:docker",
    "dev": "npm-run-all --parallel build:watch start:docker:dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^3.6.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true
  }
}
