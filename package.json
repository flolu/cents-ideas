{
  "name": "cents-ideas",
  "scripts": {
    "start:gateway": "ts-node services/gateway/index.ts",
    "----": "----",
    "fire": "yarn install && yarn build",
    "refire": "yarn clean && yarn fire",
    "start:dev": "npm-run-all --parallel build:watch start:docker:dev start:frontend",
    "start:dev:up": "npm-run-all --parallel build:watch start:docker:dev:up start:frontend",
    "test": "lerna run test",
    "start": "yarn start:docker",
    "release": "lerna version",
    "---": "---",
    "start:frontend": "lerna exec --scope @cents-ideas/frontend -- yarn start",
    "clean": "lerna run clean && rimraf node_modules",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "tsc": "tsc",
    "start:docker:dev": "docker-compose -f docker-compose.dev.yaml up --build --no-color 2>&1 | sed 's/^[^ ]*  *| //'",
    "start:docker:dev:up": "docker-compose -f docker-compose.dev.yaml up --no-color 2>&1 | sed 's/^[^ ]*  *| //'",
    "start:docker": "docker-compose -f docker-compose.prod.yaml up --build"
  },
  "dependencies": {
    "@types/uuid": "^3.4.6",
    "async-retry": "^1.2.3",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "kafkajs": "^1.10.0",
    "mongodb": "^3.3.2",
    "reflect-metadata": "^0.1.13",
    "sanitize-html": "^1.20.1",
    "shortid": "^2.2.15",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@bazel/bazel": "^1.2.0",
    "@bazel/buildifier": "^0.29.0",
    "@bazel/ibazel": "^0.11.0",
    "@bazel/typescript": "^1.0.1",
    "@types/async-retry": "^1.4.1",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.8",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/kafkajs": "^1.8.2",
    "@types/mongodb": "^3.3.1",
    "@types/sanitize-html": "^1.20.1",
    "@types/shortid": "^0.0.29",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true
  }
}
